## python

prelude:
- import re
- python_float = float
- FLOAT_RE = re.compile(r'^\s*-?\d+(\.\d+)?\s*$')

-- code
def float(value):
  if not FLOAT_RE.match(value):
    raise ValueError('float_required')

  return python_float(value)
